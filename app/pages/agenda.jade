extends ../layouts/layout.jade

block vars
    - var title = "Agenda"

mixin talk(speaker)
  tr
    td.datetime= speaker.time
    td.speaker
      img(src='/images/speakers/' + speaker.image alt=speaker.name)
      h3= speaker.name
      h4= speaker.title
      a(href='/speaker/' + speaker.id + '.html') 

mixin break(time, type)
  .slot.break.cf
    span.time= time
    span.type= type

mixin group(title)
  tr.group
    td
    td= title

mixin event(time, title, room, description)
  tr
    td.datetime= time
    td.event
      h3= title
      if (room)
        h4= room
      if (description)
        p= description

mixin break(time)
  tr
    td.datetime= time
    td.event
      h2 Break

block content

    // heading
    include ../partials/secondary-header.jade

    section.schedule.content
        ul
