// Base styling

*, *:after, *:before
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box

html
  font-size: 100%
  -webkit-text-size-adjust: none

body
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  font-family: $font-family-opensans
  font-size: 16px
  line-height: 1.4
  text-align: center
  color: $grey-drk

h1, h2, h3
  font-weight: $font-weight-bold

h1
  font-size: 80px

h2
  margin-bottom: 15px
  font-size: 28px

h3
  margin-bottom: 10px
  font-size: 20px

p, ul, address
  margin-bottom: 15px

a
  text-decoration: none
  color: $teal
  transition(all .2s ease-in)

  &:hover
    opacity: .6

ul
  padding-left: 30px
  list-style-type: disc

  li
    margin-bottom: 5px

section
  padding: 60px 20px

section > h2,
section > p,
section > ul
  max-width: 600px
  margin-left: auto
  margin-right: auto

// Two column layout with margin in between (talks, schedule, tickets)
.dual-column

  h3
    margin-top: 20px
    padding: 5px 15px
    background: $grey-light
    text-align: left

  @media screen and (max-width: $small-width)

    & > .column
      width: 100%

  @media screen and (min-width: $small-width + 1px)

    & > .column
      width: 48%

      &:nth-child(odd)
        margin-right: 2%
      &:nth-child(even)
        margin-left: 2%

hr
  width: 80%
  max-width: 400px
  margin: 60px auto 50px
  border: none
  border-top: $grey-border

address span
  display: block

.container
  max-width: $container-width
  margin: 0 auto

.column
  float: left


// Clearfix
.cf
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both