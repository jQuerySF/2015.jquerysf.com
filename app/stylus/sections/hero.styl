// Hero section

.hero
  position:relative
  min-height: 650px
  margin-top:100px
  padding-top: 10px
  padding-bottom: 20px
  background: url(../images/hero-background.png) no-repeat center bottom
  background-size: cover
  color: $colors-hero-foreground-primary


  .container
    font-size:24px
    text-align:right
    centerAbsolute()

    h2
      font:$fonts-hero-secondary
      color:$colors-hero-foreground-secondary
      font-size:24px
      margin-top:30px

    .date
      margin:0
      font:$fonts-hero-primary
      font-size: 24px

    .location
      margin:0
      font:$fonts-hero-primary
      font-size: 24px

  @media screen and (max-width: $medium-width)
    .container
      img
        width:80vw
        max-width:463px

  @media screen and (max-width: $small-width)

    min-height: 500px

    h1
      font-size: 40px
    h2
      font-size: 20px
    .date
      font-size: 24px
    .location
      font-size: 16px