// Schedule section

.schedule

  img
    width: 100px
    height: 100px

  ul, li
    margin:0
    padding:0
    list-style-type: none
    max-width:none

  ul
    position:relative
    margin:0 auto

    li
      &:not(:first-child)
        margin-top:160px

  table
    max-width:800px
    width:100%
    font:$fonts-regular
    margin:0 auto
    text-align:left

    thead
      font-size:27px
      color:$foreground-primary
      border-bottom:1px solid $foreground-tertiary

    th.datetime, td.datetime
      font-size:27px
      color:$foreground-tertiary
      white-space:nowrap
      vertical-align:top
      padding-bottom:20px

    th.day, td.event, td.speaker, tr.group td
      padding-left:80px

    td
      padding-top:30px

    td.datetime, td.event
      padding-top:45px

    td.event
      h2
        font:$fonts-bold
        font-size:27px
        color:$foreground-tertiary
        text-transform:uppercase
      h3
        font:$fonts-lora-regular
        font-size:27px
      h4
        font:$fontsregular
        font-size:18px
        color:$foreground-tertiary
        text-transform:uppercase
      p
        margin:20px 0
        font:$fonts-lora-regular
        font-size:14px
      a.cta
        font:$fonts-regular
        font-size:18px
        color:$foreground-secondary
        background:$foreground-tertiary
        padding:8px
        text-transform:uppercase
        display:inline-block

    td.speaker
      position:relative
      color:$foreground-primary

      img
        float:left

      h3, h4
        margin:0 0 0 120px
        font:$fonts-lora-regular
        font-size:24px
        padding-right:48px

      h4
        color:#BEBFC7

      a.cta
        right:0
        width:43px
        height:43px
        background:url(../images/fpo-arrow-link.png) no-repeat
        centerVertical()
        position:absolute

    tr.group
      font:$fonts-regular
      font-size:18px
      color:$foreground-tertiary
      text-transform:uppercase
      margin-top: 15px

  .container
    text-align: left

  .slot
    padding: 10px

    &:not(:last-child)
      border-bottom: $grey-border

  .time,
  .title
    display: block
    float: left

  @media screen and (max-width: $medium-width)
    &.content
      padding: 25px

    .time
      width: 100px
    .title
      width: calc(100% - 100px)

    ul li
      &:not(:first-child)
        margin-top:80px

    table
      td.speaker
        h3, h4
          margin:0

      th.day, td.event, td.speaker, tr.group td
        padding-left:25px

      th.datetime, th.day, td.datetime
        font-size: 18px

      td.event
        h3
          font-size: 22px
        h4
          font-size: 18px

      td.speaker
        img
          display: none;
        h3
          font-size: 20px
        h4
          font-size: 18px


  @media screen and (min-width: $medium-width + 1px)

    .time
      width: 150px
    .title
      width: calc(100% - 150px)


